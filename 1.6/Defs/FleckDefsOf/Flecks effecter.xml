<Defs>

<ThingDef ParentName="SkyfallerBase">
    <defName>VPE_Ragna_FireballIncomingSTNL</defName>
    <label>Fire bolt</label>
    <graphicData>
      <texPath>UI_RagnarokSTNL/Flecks/Magician/SkyfallerFlameBolt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutFlying</shaderType>
      <drawSize>(2, 2)</drawSize>
    </graphicData>
    <skyfaller>
      <movementType>ConstantSpeed</movementType>
      <!-- <shadow>Things/Skyfaller/SkyfallerShadowRectangle</shadow> -->
      <!-- <shadowSize>(2, 2)</shadowSize> -->
      <ticksToImpactRange>30~60</ticksToImpactRange>
      <!-- <anticipationSound>WarpedObelisk_Fall</anticipationSound> -->
      <!-- <anticipationSoundTicks>780</anticipationSoundTicks> -->
      <impactSound>Explosion_Flame</impactSound>
      <rotateGraphicTowardsDirection>true</rotateGraphicTowardsDirection>
      <motesPerCell>0</motesPerCell>
	  <explosionDamageFactor>1</explosionDamageFactor>
      <explosionRadius>1</explosionRadius>
      <explosionDamage>Flame</explosionDamage>
    </skyfaller>
  </ThingDef>
  
  <ThingDef ParentName="SkyfallerBase">
    <defName>VPE_Ragna_ColdBoltIncomingSTNL</defName>
    <label>Cold bolt</label>
    <graphicData>
      <texPath>UI_RagnarokSTNL/Flecks/Magician/icearrow</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutFlying</shaderType>
      <drawSize>(1, 1)</drawSize>
    </graphicData>
    <skyfaller>
      <movementType>ConstantSpeed</movementType>
      <!-- <shadow>Things/Skyfaller/SkyfallerShadowRectangle</shadow> -->
      <!-- <shadowSize>(2, 2)</shadowSize> -->
      <ticksToImpactRange>30~60</ticksToImpactRange>
      <!-- <anticipationSound>WarpedObelisk_Fall</anticipationSound> -->
      <!-- <anticipationSoundTicks>780</anticipationSoundTicks> -->
      <impactSound>Explosion_Bomb</impactSound>
      <rotateGraphicTowardsDirection>true</rotateGraphicTowardsDirection>
      <motesPerCell>0</motesPerCell>
	  <explosionDamageFactor>1.5</explosionDamageFactor>
      <explosionRadius>1</explosionRadius>
      <explosionDamage>VPE_ColdBoltSNTL</explosionDamage>
    </skyfaller>
  </ThingDef>
  
    <DamageDef>
    <defName>VPE_ColdBoltSNTL</defName>
    <label>Cold Bolt</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <isExplosive>true</isExplosive>
    <deathMessage>{0} has died in an explosion.</deathMessage>
    <hediff>Shredded</hediff>
    <hediffSolid>Crack</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Blunt</impactSoundType>
    <armorCategory>Sharp</armorCategory>
    <minDamageToFragment>15</minDamageToFragment>
    <defaultDamage>50</defaultDamage>
    <defaultStoppingPower>0.5</defaultStoppingPower>
    <defaultArmorPenetration>0.10</defaultArmorPenetration>
    <buildingDamageFactorImpassable>4</buildingDamageFactorImpassable>
    <buildingDamageFactorPassable>2</buildingDamageFactorPassable>
    <plantDamageFactor>4</plantDamageFactor>
    <corpseDamageFactor>0.5</corpseDamageFactor>
    <explosionAffectOutsidePartsOnly>false</explosionAffectOutsidePartsOnly>
    <explosionHeatEnergyPerCell>5</explosionHeatEnergyPerCell>
    <explosionCellFleck>BlastDry</explosionCellFleck>
    <explosionColorCenter>(0.8, 0.8, 1)</explosionColorCenter>
    <explosionColorEdge>(0.5, 0.5, 0.8)</explosionColorEdge>
    <soundExplosion>Explosion_Bomb</soundExplosion>
    <combatLogRules>Damage_Bomb</combatLogRules>
  </DamageDef>
  
  
